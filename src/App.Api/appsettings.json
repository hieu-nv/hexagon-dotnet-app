{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=app.db"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "DatadogLogs",
        "Args": {
          "apiKey": "dummy-key",
          "source": "csharp",
          "service": "hexagon-dotnet-app",
          "host": "localhost",
          "tags": [
            "env:development",
            "version:1.0.0"
          ],
          "configuration": {
            "Url": "http://localhost:8125",
            "Port": 8125
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": []
  },
  "JwtBearer": {
    "Enabled": true,
    "Authority": "http://localhost:8080/realms/hexagon",
    "Audience": "account",
    "RequireHttpsMetadata": false
  }
}